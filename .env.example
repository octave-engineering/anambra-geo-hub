# Frontend Configuration
VITE_API_BASE=http://localhost:3001/api
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_API_KEY=your_frontend_api_key_optional
VITE_AUTH_TOKEN=your_jwt_token_optional

# Backend Database Configuration
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=anambra_geohub
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_VERSION=v1
GEMINI_MODEL=gemini-1.5-flash-001

# API Settings
API_DEFAULT_LIMIT=10000
API_MAX_LIMIT=50000

# Node Environment
NODE_ENV=development
PORT=3001

# =====================
# Authorization (Backend)
# =====================
# Enable to require API key or JWT on protected endpoints
AUTH_ENABLED=true

# Comma-separated list of API keys allowed
API_KEYS=replace_with_strong_random_key1,replace_with_strong_random_key2

# Optional username/password login (to issue JWT)
AUTH_USERNAME=admin
AUTH_PASSWORD=change_this_password

# JWT settings
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=12h
